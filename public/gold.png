<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 200 200">
  <defs>
    <radialGradient id="goldGradient" cx="50%" cy="30%" r="70%">
      <stop offset="0%" style="stop-color:#FFD700;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#FFA500;stop-opacity:1" />
      <stop offset="70%" style="stop-color:#FF8C00;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#B8860B;stop-opacity:1" />
    </radialGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/> 
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background circle -->
  <circle cx="100" cy="100" r="90" fill="url(#goldGradient)" filter="url(#glow)" stroke="#FFD700" stroke-width="4"/>
  
  <!-- Inner shine -->
  <ellipse cx="80" cy="70" rx="25" ry="15" fill="#FFFF99" opacity="0.6"/>
  
  <!-- Rare Special Item text -->
  <text x="100" y="90" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="#8B4513" stroke="#FFD700" stroke-width="0.5">
    RARE
  </text>
  <text x="100" y="110" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="#8B4513" stroke="#FFD700" stroke-width="0.5">
    SPECIAL
  </text>
  <text x="100" y="130" font-family="Arial, sans-serif" font-size="14" font-weight="bold" text-anchor="middle" fill="#8B4513" stroke="#FFD700" stroke-width="0.5">
    ITEM
  </text>
  
  <!-- Sparkle effects -->
  <circle cx="60" cy="60" r="3" fill="#FFFF99" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.3;0.8" dur="2s" repeatCount="indefinite"/>
  </circle>
  <circle cx="140" cy="50" r="2" fill="#FFFF99" opacity="0.6">
    <animate attributeName="opacity" values="0.6;0.2;0.6" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="150" cy="130" r="4" fill="#FFFF99" opacity="0.7">
    <animate attributeName="opacity" values="0.7;0.2;0.7" dur="2.5s" repeatCount="indefinite"/>
  </circle>
  <circle cx="50" cy="140" r="2.5" fill="#FFFF99" opacity="0.5">
    <animate attributeName="opacity" values="0.5;0.1;0.5" dur="1.8s" repeatCount="indefinite"/>
  </circle>
</svg>